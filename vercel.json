{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "client/build" }
        },
        {
            "src": "server/**/*.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/server/$1.ts" },
        { "src": "/(.*)", "dest": "/client/$1" }
    ]
}